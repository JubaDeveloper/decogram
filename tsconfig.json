{
  "ts-node": {
      "require": [
        "tsconfig-paths/register"
      ]
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "target": "esnext",
    "module": "node16",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "isolatedModules": true,
    "paths": {
      "decogram@core/*": ["./core/*"]
    }
  },
  "include": [
    "src",
    "test"
  ]
}